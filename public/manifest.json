{
	"manifest_version": 3,
	"name": "Vision CMS Extension",
	"version": "1.0.0",
	"description": "Take screenshots of code to analyze",
	"action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		},
		"default_title": "Vision CMS"
	},
	"permissions": [
		"activeTab",
		"storage",
		"scripting",
		"tabs",
		"downloads",
		"alarms",
		"sidePanel"
	],
	"host_permissions": ["<all_urls>"],
	"web_accessible_resources": [
		{
			"resources": ["content.js", "content.css", "content-html2canvas.js.js"],
			"matches": ["<all_urls>"]
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"side_panel": {
		"default_path": "sidepanel.html"
	},
	"content_security_policy": {
		"extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
	}
}
